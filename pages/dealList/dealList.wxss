/* pages/dealDetail/dealDetail.wxss */
.page-header{
    height: 300rpx;
	background-color: #1bd059;
}
.page-header .hd{
    text-align: center;
    display: flex;
    color: #fff;
    justify-content: center;
    opacity: .8;
    font-size: 26rpx;
    padding-top: 40rpx;
}
.page-header .money{
    color: #fff;
    font-size: 60rpx;
    display: flex;
    justify-content: center;
    text-align: center;
    padding-top: 20rpx;
}
.deal-tags{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-top: 30rpx;
}
.deal-tags .tag{
    border-right: 1rpx solid #fff;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
  
}
.deal-tags .tag:last-child{
    border-right: none;
}
.deal-tags .tag .name{
    color: #fff;
    opacity: .8;
    font-size: 22rpx;
    padding-bottom: 10rpx;
}
.list{
    padding-left: 24rpx;
    background: #fff;
}
.list-item{
    border-bottom: 1rpx solid #eee;
    padding: 30rpx 24rpx 30rpx 0;
}
.list-item:last-child{
    border-bottom: none;
}
.list .order-hd{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.list .order-hd .name{
    flex: 1;
    color: #333;
    font-size: 30rpx;
}
.list .order-hd .num{
    font-size: 30rpx;
    color:#fc412b;
}
.list .order-hd .nums{
    font-size: 30rpx;
    color:#1bd05a;
}
.date{
    color: #999;
    font-size: 24rpx;
    display: flex;
    padding-top: 20rpx;
}