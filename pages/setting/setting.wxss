/* pages/setting/setting.wxss */
.page-body{
    background: #fff;
    margin-top: 40rpx;
    padding-left: 24rpx;
}
.page-body .item{
    border-bottom: 1rpx solid #eee;
    display: flex;
    align-items: center;
    flex-direction: row;
    padding: 40rpx 24rpx 20rpx 0;
}
.page-body .item:last-child{
    border-bottom: none;
}
.page-body .item .title{
    display: inline;
    flex: 1;
    color: #333;
    font-size: 28rpx;
    align-items: center;
}
.item-r{
 display: flex;
  flex-direction: row;
    align-items: center;
}
.info{
    font-size: 24rpx;
    color: #999;
    display: inline-flex;
    align-items: center;
}
.btn-exit{
 background: #fff;
 height:50px;
 display: flex;
 justify-content: center;
 align-items: center;
 color: #333;
 border: none;
 font-size: 28rpx;
 margin:40rpx 0 0;
 border-radius: 0;
}
.btn-exit::after{
    border: none;
    border-radius: 0;
}