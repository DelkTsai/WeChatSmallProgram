/* pages/master/master.wxss */
.page-body{
   	height: 280rpx;
	background-image: linear-gradient(to bottom, #fd412a, #ff6350);
}
.page-header{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-top: 40rpx;
}
.page-header .tab{
    flex: 1;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}
.page-header .tab text{
    padding-top: 20rpx;
    color: #fff;
    font-size: 28rpx;
}
.page-header .ps1 image{
    width: 44rpx;
    height: 48rpx;
}
.page-header .ps2 image{
    width: 42rpx;
    height: 42rpx;
}
.page-header .ps3 image{
    width: 40rpx;
    height: 48rpx;
}
.list{
    padding: 40rpx 24rpx;
}
.item-box{
    background: #fff;
    border-radius: 8rpx;
    margin-top: 20rpx;
}
.item{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    border-bottom: 1rpx solid #eee;
}
.avatar{
    flex: 1;
    display: flex;
    align-items: center;
    flex-direction: row;
}
.btn-order{
    width: 156rpx;
	height: 60rpx;
	border-radius: 100rpx;
	background-color: #ffffff;
	border: solid 1rpx #999;
    font-size: 24rpx;
    line-height: 60rpx;
    color: #999;
    margin-right: 24rpx;
}
.avatar image{
    width: 98rpx;
    height: 98rpx;
    margin-left: 24rpx;
}
.avatar text{
    font-size: 30rpx;
    color: #333;
    padding-left: 20rpx;
}
.order_info{
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: center;
    padding: 24rpx;
}
.order_info text{
    color: #999;
    font-size: 22rpx;
}