/* pages/cash/cash.wxss */
.item-block{
    margin-top: 20rpx;
    padding: 24rpx;
    background: #fff;
    display: flex;
    align-items: center;
    flex-direction: row;
}
.item-block .bank-logo{
    flex: 1;
    display: inline-flex;
    flex-direction: row;
    align-items: center;
}
.img-cash{
    width: 96rpx;
    height: 96rpx;
    overflow: hidden;
    display: inline-flex;
}
.text-block{
    display: inline-flex;
    flex-direction: column;
    font-size: 30rpx;
    color: #333;
    padding-left: 20rpx;
}
.sub_title{
    font-size: 26rpx;
    color: #999;
    padding-top: 20rpx;
}
.item-blocks{
    margin-top: 20rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
}
.cash-box{
    margin-left: 24rpx;
    border-bottom: 1rpx solid #e0e0e0;
    padding-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    padding-top: 40rpx;
}
.cash-input{
    color: #4a4a4a;
    font-size: 40rpx;
    display: flex;
    line-height: 40rpx;
}
.tips-cash{
    color: #666;
    font-size: 24rpx;
    padding-top: 20rpx;
}
.total-money{
    padding-left: 24rpx;
    display: flex;
    color: #999;
    font-size: 24rpx;
    padding-top: 20rpx;
}
.btn-ok{
    margin: 40rpx 24rpx;
    background: #fc412b;
    border-radius: 10rpx;
    color: #fff;
    height: 96rpx;
    font-size: 28rpx;
    line-height: 96rpx;
}